<web-app version="3.0">
    <display-nme>Spring MVC Application</display-nme>
    <servlet>
        <servlet-name>Web</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>

        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Web</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>